                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_coffee6"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/image_height"
                        android:onClick="@{() -> CoffeeCatalogFragment.goNext(6)}"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/high_coffee" />

                    <TextView
                        android:id="@+id/coffee6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doppio_coffee"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        app:layout_constraintStart_toStartOf="@id/image_coffee6"
                        app:layout_constraintTop_toBottomOf="@id/image_coffee6" />

                    <TextView
                        android:id="@+id/making_time6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/time_padding"
                        android:text="@string/time_two"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        app:layout_constraintEnd_toEndOf="@id/image_coffee6"
                        app:layout_constraintTop_toBottomOf="@id/coffee6" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_coffee7"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/image_height"
                        android:onClick="@{() -> CoffeeCatalogFragment.goNext(7)}"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/hot_coffee" />

                    <TextView
                        android:id="@+id/coffee7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/red_eye_coffee"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        app:layout_constraintStart_toStartOf="@id/image_coffee7"
                        app:layout_constraintTop_toBottomOf="@id/image_coffee7" />

                    <TextView
                        android:id="@+id/making_time7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/time_padding"
                        android:text="@string/time_two"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        app:layout_constraintEnd_toEndOf="@id/image_coffee7"
                        app:layout_constraintTop_toBottomOf="@id/coffee7" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_coffee8"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/image_height"
                        android:onClick="@{() -> CoffeeCatalogFragment.goNext(8)}"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/late_coffee" />

                    <TextView
                        android:id="@+id/coffee8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/macchiato_coffee"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        app:layout_constraintStart_toStartOf="@id/image_coffee8"
                        app:layout_constraintTop_toBottomOf="@id/image_coffee8" />

                    <TextView
                        android:id="@+id/making_time8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/time_padding"
                        android:text="@string/time_three"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        app:layout_constraintEnd_toEndOf="@id/image_coffee8"
                        app:layout_constraintTop_toBottomOf="@id/coffee8" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</layout>